@section Scripts {
	<script src="~/Scripts/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
			$('#clientTable').DataTable(
				{
					"ordering": false,
				}
			);
		});
	</script>
	@Scripts.Render("~/bundles/jqueryval")
	<script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>

}


